{
  "name": "@dolusoft/claude-collab",
  "version": "0.1.0",
  "description": "Real-time team collaboration between Claude Code terminals via MCP",
  "type": "module",
  "main": "./dist/mcp-main.js",
  "bin": {
    "claude-collab": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/mcp-main.js",
      "types": "./dist/mcp-main.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mcp",
    "model-context-protocol",
    "collaboration",
    "team",
    "terminal",
    "communication"
  ],
  "author": "Dolusoft",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dolusoft/claude-collab.git"
  },
  "bugs": {
    "url": "https://github.com/dolusoft/claude-collab/issues"
  },
  "homepage": "https://github.com/dolusoft/claude-collab#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ws": "^8.18.0",
    "zod": "^3.25.0",
    "commander": "^12.1.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.0",
    "rimraf": "^6.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
}
